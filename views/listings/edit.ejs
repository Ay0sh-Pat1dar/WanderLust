<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
    <div class="col-8 offset-2">
    <h2>Edit Your Listing:-</h2>
    <form action="/listings/<%=listing._id%>/edit?_method=PATCH" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="listing[title]" class="form-label">Title:-</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
            <div class="valid-feedback">Title <i class="fa-solid fa-check"></i></div>
            <div class="invalid-feedback">Required</div>
        </div>
        <div class="mb-3">
            <label for="listing[description]" class="form-label">Description:-</label>
            <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
            <div class="valid-feedback">Description <i class="fa-solid fa-check"></i></div>
            <div class="invalid-feedback">Required</div>
        </div>
        <div class="mb-3">
            <label for="listing[price]" class="form-label">Price:-</label>
            <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
            <div class="valid-feedback">Price <i class="fa-solid fa-check"></i></div>
            <div class="invalid-feedback">Required</div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-8">
            <label for="listing[location]" class="form-label">Location:-</label>
            <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
            <div class="valid-feedback">Location <i class="fa-solid fa-check"></i></div>
            <div class="invalid-feedback">Required</div>
        </div>
        <div class="mb-3 col-md-4">
            <label for="listing[country]" class="form-label">Country:-</label>
            <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
            <div class="valid-feedback">Country <i class="fa-solid fa-check"></i></div>
            <div class="invalid-feedback">Required</div>
        </div>
    </div>
    <div class="mb-3">
        Original listing image:- <br>
        <img src="<%= originalListingImage %>" alt="listing image">
    </div>
        <div class="mb-3">
            <label for="listing[image.url]" class="form-label">Image:-</label>
            <input type="file" name="listing[image]" class="form-control" >
            <div class="valid-feedback">Image <i class="fa-solid fa-check"></i></div>
            <div class="invalid-feedback">Required</div>
        </div>
        <button class="btn btn-dark btn-add">Edit</button>
        <br><br>
    </form>
</div>
</div>